<Page x:Class="EducationalPracticeAutumn2024.Pages.AdminPages.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EducationalPracticeAutumn2024.Pages.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920" FontFamily="Comic Sans MS"
      Title=" ">

    <Grid Background="#E7FABF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchTbx"
            FontSize="23" Grid.Column="0" Grid.Row="0"   
            Background="White"
            Width="500" Height="65"
            VerticalAlignment="Bottom" HorizontalAlignment="Center" TextChanged="SearchTbx_TextChanged" />

        <ComboBox x:Name="FiltrCb"
                  Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"
              Margin="0 100 0 0" FontSize="21"  Width="500" Height="65" SelectionChanged="FiltrCb_SelectionChanged">
        </ComboBox>

        <ComboBox x:Name="FiltrSaleCb"
            Grid.Column="0" Grid.Row="1" FontSize="21"
            Width="500" Height="65" VerticalAlignment="Top" Margin="30" SelectionChanged="FiltrSaleCb_SelectionChanged">
        </ComboBox>

        <ListView x:Name="ServicesLV" VerticalAlignment="Center"
                  Grid.Column="1" Grid.ColumnSpan="2" 
                  Grid.Row="0" Grid.RowSpan="5"
                  Width="1200" Height="800" d:ItemsSource="{d:SampleData ItemCount=100}">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="100" Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Black" Margin="0" Padding="1">
                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"  Height="255">

                                    <StackPanel Orientation="Horizontal" Width="300" Margin="5">
                                        <Image Source="{Binding MainImagePath}" Width="300" Height="250"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Vertical" Width="850">

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="100"/>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition Height="50"/>
                                                <RowDefinition Height="50"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0" Text="{Binding Title}" TextWrapping="Wrap" FontSize="35" Width="830" Height="100" Margin="20, 0"/>
                                            <TextBlock Grid.Row="1" Text="{Binding Cost}" TextWrapping="Wrap" FontSize="30" Width="830" Height="50" Margin="20, 0"/>
                                            <TextBlock Grid.Row="2" Text="*" TextWrapping="Wrap" FontSize="30" Width="830" Height="50" Margin="20, 0"/>

                                            <Button Grid.Row="3" Content="редактировать"
                                                    HorizontalAlignment="Left"
                                                    Width="300" Height="45" Margin="20 0 0 0" FontSize="30"                
                                                    BorderBrush="Black" BorderThickness="3" Background="#CC05A0FF" >
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                            <Button Grid.Row="3" Content="удалить"
                                                    HorizontalAlignment="Left"
                                                    Width="200" Height="45" Margin="350 0 0 0" FontSize="30"
                                                    BorderBrush="Black" BorderThickness="2" Background="#CC05A0FF" >
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="20"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>

                                        </Grid>

                                    </StackPanel>


                                </StackPanel>

                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
