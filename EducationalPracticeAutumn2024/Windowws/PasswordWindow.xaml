<Window x:Class="EducationalPracticeAutumn2024.Pages.MainPages.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EducationalPracticeAutumn2024.Pages.MainPages"
        mc:Ignorable="d"
        Title="Режим администратора" Height="190" Width="400"
        FontFamily="Comic Sans MS">
    <Grid>
        <Frame x:Name="MainFrame" />

        <PasswordBox x:Name="PasswordTB" HorizontalAlignment="Center" VerticalAlignment="Center" Width="220" HorizontalContentAlignment="Center"
                 Margin="0,0,0,20"/>
        <Button Content="Подтвердить" Name="OKBTN" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="30" Width="130" Click="ConfirmButton_Click"                 
                BorderBrush="Black" BorderThickness="1" Background="#CC05A0FF">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
